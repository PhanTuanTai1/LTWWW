@model Bai9.Models.Student
@{
    ViewBag.Title = "EditStudent";
}

<h2>Edit Student</h2>
<p>Student Infomation</p>
@using (Html.BeginForm("Edit", "StudentManager", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.LabelFor(model => model.Id, "Student ID")<br />
    @Html.TextBoxFor(model => model.Id, new { @readonly = "readonly"})<br />
    @Html.LabelFor(model => model.Name, "Student Name")<br />
    @Html.TextBoxFor(model => model.Name)<br />
    @Html.LabelFor(model => model.Birthday, "Birthday")<br />
    <input type="date" name="Birthday" id="Birthday" value="@Model.Birthday.ToString("yyyy-MM-dd")" /><br />
    @*@Html.TextBoxFor(model => model.Birthday,new { @type="date"})<br />*@
    @Html.LabelFor(model => model.Address, "Address")<br />
    @Html.TextBoxFor(model => model.Address)<br />
    @Html.LabelFor(model => model.Pic, "Picture")<br />
    @Html.TextBoxFor(model => model.Pic, new { type = "file" })<br />
    <input type="submit" value="Save" /><br />
    @Html.ActionLink("Back to Index", "Index")
}

