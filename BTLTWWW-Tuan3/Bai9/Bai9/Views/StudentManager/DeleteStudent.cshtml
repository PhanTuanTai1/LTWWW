@model Bai9.Models.Student
@{
    ViewBag.Title = "DeleteStudent";
}

<h2>Delete Student</h2>
<h6>Are you sure you want to delete this ?</h6>
<ul style="list-style-type:none;">
    <li><b>Student Name   </b>@Model.Name</li>
    <li><b>Birthday   </b>@Model.Birthday</li>
    <li><b>Address   </b>@Model.Address</li>
    <li><b>Picture   </b>@Model.PicUrl</li>
